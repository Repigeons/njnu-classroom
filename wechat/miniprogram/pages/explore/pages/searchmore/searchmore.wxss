/* pages/searchmore/searchmore.wxss */
.rp-dialog {
  visibility: hidden;
  opacity: 0;
  transition: opacity .3s;
}

.rp-dialog_show {
  visibility: visible;
  opacity:1;
}

.rp-dialog__bd {
  text-align: left;
  margin: 5px 0 15px 0;
  padding: 0 20px 0 24px;
}

.rp-cell {
  height: 48px;
}

.rp-cell__hd {
  font-weight: 700;
}

.rp-cell__bd {
  margin-left: 1px;
  padding-left: 1px;
  left: 1px;
}
