.search-bar {
  position: relative;
  padding: 8px;
  display: flex;
  box-sizing: border-box;
  background-color: #ededed;
  -webkit-text-size-adjust: 100%;
  -webkit-box-align: center;
  align-items: center;
}

.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  flex: auto;
  background-color: #fff;
  border-radius: 16px;
}

.search-bar__box {
  position: relative;
  padding-left: 28px;
  padding-right: 32px;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.search-bar__input {
  padding: 8px 0;
  width: 100%;
  border: 0;
  font-size: 14px;
  box-sizing: content-box;
  background: transparent;
  caret-color: #07c160;
  color: rgba(0,0,0,.9);
  height: inherit;
  line-height: inherit;
}

.search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.search-bar__search {
  display: none;
  margin-left: 8px;
  line-height: 28px;
  color: #576b95;
  white-space: nowrap;
}
.search-bar_focusing .search-bar__search {
  display: block;
}

