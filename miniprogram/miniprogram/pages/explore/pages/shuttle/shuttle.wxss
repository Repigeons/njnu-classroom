/* explore/pages/shuttlebus/shuttlebus.wxss */
.rp-page-top {
  height: 104px;
}

.rp-topbox {
  position: absolute;
  width: calc(100% - 40px);
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 56px; 
  margin: 16px 8px 8px 8px;
  background-color: #f2cc8f;
  border-radius: 16px;
  padding: 12px;
  box-shadow: 0 0 8px #d9b780;
}

.rp-topbox .button__left {
  text-align: left;
  width: 40%;
  display: flex;
  flex-direction: column;
}

.rp-topbox .arrow {
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.rp-topbox .button__right {
  text-align: right;
  width: 40%;
  display: flex;
  flex-direction: column;
}

.rp-topbox .exchange {
  font-size: 12px; 
  color: #4D4D4D; 
  height: 18px;
  line-height: 18px;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-right: 1px;
}

.rp-topbox .distance {
  font-size: 12px; 
  color: #4D4D4D; 
  height: 18px; 
  line-height: 18px;
  white-space: nowrap;
  margin-left: 1px;
}

.rp-topbox .weekPicker {
  font-size: 12px; 
  color: #4D4D4D; 
  height: 18px; 
  line-height: 18px;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}

.rp-topbox .title {
  padding-top: 4px;
  font-size: 21px; 
  font-weight: 700; 
  height: 28px; 
  white-space: nowrap;
}

.rp-topbox .image-arrow {
  height: 15px;
  width: 30px;
  padding: 8px 0 2px 0;
}

.rp-topbox .imagebox {
  display: flex;
  align-items: center;
  justify-content: center;
}

.rp-topbox .image-exchange {
  height: 10px;
  width: 10px;
}

.rp-topbox .image-switch {
  height: 10px;
  width: 10px;
}

.rp-scrollzone {
  position: absolute;
  top: 104px;
  height: calc(100% - 104px);
  width: 100%;
  z-index: 0;
}

.rp-scrollzone__scrollview {
  height: 100%;
}

.rp-feedback {
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  font-size: 14px;
  padding: 0 8px 8px 8px;
}

.rp-feedback .link {
  color: #576b95;
  text-decoration: underline;
}

.rp-feedback .text {
  color: rgba(0, 0, 0,.5);
}

.cover {
  position: absolute;
  left: 0;
  height: 8px;
  width: 100%;
  pointer-events: none;
  z-index: 1;
}

.cover__top {
  top: 104px;
  background: linear-gradient(to bottom, #edededff, #ededed00);
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#edededff), to(#ededed00));
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .rp-feedback .text {
    color: rgba(255, 255, 255,.5);
  }

  .cover__top {
    top: 104px;
    background: linear-gradient(to bottom, #edededff, #ededed00);
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#1E1E1Eff), to(#ededed00));
  }
  /* DarkMode 下的样式 end */
}
